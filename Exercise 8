using System;
using static System.Console;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Group_Assignment
{
    internal class Program
    {
        static void Main(string[] args)
        {
            WriteLine("Price per case is $5\n");

            WriteLine("Enter quantity of cases sold: ");
            int caseQuantity = Convert.ToInt32(ReadLine());

            WriteLine("Enter cost per case: ");
            int casePrice = Convert.ToInt32(ReadLine());

            WriteLine("Your total proceeds before 10% GAC fee is {0:c}: " , + casePrice *  caseQuantity);

            ReadKey();
        }
    }
}
